@model List<TicketApp.Domain.DomainModels.Order>

<div class="container">





    <div class="row m-4">
        <table class="table">
            <thead class="thead-dark">
                <tr>
                    <th scope="col">#</th>
                    <th scope="col">Customer Name</th>
                    <th scope="col">Number of Products</th>
                    <th></th>
                </tr>
            </thead>
            <tbody>
                @if (Model.Count == 0)
                {
                    <tr>
                        <td colspan="5">No active Products</td>
                    </tr>
 }
                else
                {
                    @for (int i = 0; i < Model.Count; i++)
                    {
                        var item = Model[i];

                        <tr>
                            <th scope="row">@(i + 1)</th>
                            <td>@item.User.UserName</td>
                            <td>@item.TicketInOrder.Count()</td>
                            <td><a asp-controller="Order" asp-action="Details" asp-route-id="@item.Id" class="btn btn-info">View Order</a></td>
                            <td><a asp-controller="Order" asp-action="CreateInvoice" asp-route-id="@item.Id" class="btn btn-info">View Invoice</a></td>
                        </tr>
}}
            </tbody>

        </table>
    </div>
    <div class="row m-4">
        <div class="col">
            <a asp-controller="User" asp-action="ImportUsers" class="btn btn-outline-success">Import Users</a></td>

        </div>
    </div>
</div>